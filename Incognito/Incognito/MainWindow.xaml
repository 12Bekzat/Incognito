<Window x:Class="Incognito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:Incognito"
        mc:Ignorable="d"
        Title="MainWindow" Height="288" Width="484" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Text="Период(мин)" Width="400" Height="50" Margin="0 100 0 0" Name="period" VerticalAlignment="Top" FontSize="20" Padding="4 8 0 0" GotFocus="ClearTextbox"/>
            <Button x:Name="save" Content="Сохранить" Margin="0 50 0 0" Height="30" Width="200" Click="SaveScreenshot"/>
        </StackPanel>
    </Grid>
</Window>
